{
  "name": "moment-opening-times",
  "version": "2.0.2",
  "description": "A small class to determine the status of a given moment in relation to a set of opening times",
  "repository": {
    "type": "git",
    "url": "https://github.com/nhsuk/moment-opening-times"
  },
  "main": "OpeningTimes.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {
    "moment": "^2.14.1",
    "moment-timezone": "^0.5.4"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "chai-moment": "^0.1.0",
    "coveralls": "^2.11.12",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-config-nhsuk": "^0.3.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-json": "^1.2.0",
    "eslint-plugin-mocha": "^4.10.1",
    "eslint-watch": "^3.1.1",
    "husky": "^0.14.2",
    "istanbul": "^0.4.3",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.2.0",
    "snyk": "^1.34.4"
  },
  "scripts": {
    "check-coverage": "istanbul check-coverage --config .istanbul.yml",
    "generate-coverage": "istanbul cover _mocha -- --recursive test",
    "git-hook": "yarn run lint && yarn run generate-coverage && yarn run check-coverage && yarn run snyk -- test",
    "lint": "eslint --ext .js,.json --max-warnings 0 .",
    "precommit": "yarn run git-hook",
    "prepublish": "yarn run git-hook",
    "prepush": "yarn run git-hook",
    "test": "TZ=GMT mocha",
    "travis": "yarn run git-hook && yarn run upload-coverage && yarn run snyk -- test --org=nhsuk && yarn run snyk -- monitor --org=nhsuk",
    "upload-coverage": "cat ./coverage/lcov.info | coveralls",
    "watch-test": "yarn run test -- --watch --reporter min"
  },
  "keywords": [
    "moment",
    "opening",
    "times"
  ],
  "author": "Neil McLaughlin & Steven Hunt",
  "license": "MIT"
}
